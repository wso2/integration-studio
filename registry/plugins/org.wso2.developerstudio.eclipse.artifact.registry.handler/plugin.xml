			</run>
		</runtime>
	</extension>
	<extension point="org.eclipse.ui.ide.projectNatureImages">
		<image id="org.wso2.developerstudio.eclipse.registry.handler.project.natureImage"
			natureId="org.wso2.developerstudio.eclipse.registry.handler.project.nature" icon="icons/new-registry-handler-12x12.png">
		</image>
	</extension>
	
	 <extension point="org.wso2.developerstudio.eclipse.platform.core.intro.ui.dashboard">
   <category id="dashboard.category.Greg" showTitle="true"
			title="Governance Registry Artifacts"
			priority="9">
