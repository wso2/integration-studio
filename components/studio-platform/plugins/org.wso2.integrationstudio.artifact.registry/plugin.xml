     </category>
     <wizardLink category="dashboard.category.greg"
                 id="dashboard.wizardLink.registry.resource"
                 wizard="org.wso2.integrationstudio.artifact.newregistryresource"
                 priority="3">
     </wizardLink>
 </extension> 
       
