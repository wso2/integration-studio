		<module>org.wso2.integrationstudio.platform.core</module>
		<module>org.wso2.integrationstudio.welcome.perspective</module>
		<module>org.wso2.integrationstudio.platform.ui</module>
		<module>org.wso2.integrationstudio.wso2plugin.template.manager</module>
		<module>org.wso2.integrationstudio.updater</module>

		<module>org.wso2.integrationstudio.libraries</module>
		<module>org.wso2.integrationstudio.ui</module>
		<module>org.wso2.integrationstudio.samples</module>
		<module>org.wso2.integrationstudio.registry.core</module>
		<module>org.wso2.integrationstudio.registry.libraries</module>
		<module>org.wso2.integrationstudio.registry.manager.remote</module>
		<module>org.wso2.integrationstudio.registry.base</module>
		<module>org.wso2.integrationstudio.registry.resource.authorization</module>
		<module>org.wso2.integrationstudio.usermgt.remote</module>
		<module>org.wso2.integrationstudio.capp.core</module>
		<module>org.wso2.integrationstudio.capp.maven</module>
		<module>org.wso2.integrationstudio.distribution.project</module>
		<module>org.wso2.integrationstudio.distributionproject.module</module>
		<module>org.wso2.integrationstudio.carbonfeatures</module>
		<module>org.wso2.integrationstudio.carbonserver.base</module>
		<module>org.wso2.integrationstudio.carbon.server.model</module>
		<module>org.wso2.integrationstudio.carbonserver.remote</module>
		<module>org.wso2.integrationstudio.carbonserver40</module>
		<module>org.wso2.integrationstudio.carbonserver42</module>
		<module>org.wso2.integrationstudio.carbonserver44</module>
		<module>org.wso2.integrationstudio.carbonserver44ei</module>
		<module>org.wso2.integrationstudio.carbonserver44microei</module>
		<module>org.wso2.integrationstudio.carbonserver44microei11</module>
		<module>org.wso2.integrationstudio.carbonserver44microei12</module>
		<module>org.wso2.integrationstudio.server.base</module>
		<module>org.wso2.integrationstudio.general.project</module>
		<module>org.wso2.integrationstudio.registry.perspective</module>
		<module>org.wso2.integrationstudio.registry.search</module>
		<module>org.wso2.integrationstudio.registry.manager.local</module>
		<module>org.wso2.integrationstudio.artifact.registry</module>
		<module>org.wso2.integrationstudio.registry.connector</module>
		<module>org.wso2.integrationstudio.artifact.security</module>
		<module>org.wso2.integrationstudio.security.ui</module>
		<module>org.wso2.integrationstudio.artifact.library</module>
		<module>org.wso2.integrationstudio.maven.multi.module</module>
		<module>org.wso2.integrationstudio.webui.core</module>
		<module>org.wso2.integrationstudio.appcloud.utils</module>
		<module>org.wso2.integrationstudio.templates.dashboard</module>
		<module>org.wso2.integrationstudio.dashboard</module>
		<module>org.wso2.integrationstudio.project.extensions</module>
		<module>org.wso2.integrationstudio.docker.distribution</module>

		<module>org.wso2.integrationstudio.ei.project</module>
	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>${maven.eclipse.plugin}</version>
				<configuration>
					<projectnatures>
						<projectnature>org.eclipse.jdt.core.javanature</projectnature>
						<projectnature>org.eclipse.pde.PluginNature</projectnature>
					</projectnatures>
					<buildcommands>
						<buildcommand>org.eclipse.jdt.core.javabuilder</buildcommand>
						<buildcommand>org.eclipse.pde.ManifestBuilder</buildcommand>
						<buildcommand>org.eclipse.pde.SchemaBuilder</buildcommand>
					</buildcommands>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>devsrelease</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jarsigner-plugin</artifactId>
						<version>${org.apache.maven.jarsigner.plugin}</version>
						<configuration>
							<keystore>${keystore.path}</keystore>
							<storepass>${keystore.store.password}</storepass>
							<alias>selfsigned</alias>
							<keypass>${keystore.key.password}</keypass>
						</configuration>
						<executions>
							<execution>
								<id>sign</id>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
