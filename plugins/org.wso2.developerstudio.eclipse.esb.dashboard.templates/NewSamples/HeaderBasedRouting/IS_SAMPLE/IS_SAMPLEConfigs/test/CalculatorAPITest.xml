<unit-test>
    <artifacts>
        <test-artifact>
            <artifact>/IS_SAMPLEConfigs/src/main/synapse-config/api/CalculatorAPI.xml</artifact>
        </test-artifact>
        <supportive-artifacts>
            <artifact>/IS_SAMPLEConfigs/src/main/synapse-config/endpoints/CalculatorDivideEP.xml</artifact>
            <artifact>/IS_SAMPLEConfigs/src/main/synapse-config/endpoints/CalculatorAddEP.xml</artifact>
        </supportive-artifacts>
        <registry-resources/>
        <connector-resources/>
    </artifacts>
    <test-cases>
        <test-case name="test_add">
            <input>
                <request-path>/</request-path>
                <request-method>POST</request-method>
                <payload><![CDATA[<ArithmaticOperation>   
<Arg1>10</Arg1>   
<Arg2>25</Arg2>   
</ArithmaticOperation>]]></payload>
                <properties>
                    <property name="Content-Type" scope="transport" value="text/xml"/>
                    <property name="Operation" scope="transport" value="Add"/>
                </properties>
            </input>
            <assertions>
                <assertEquals>
                    <actual>$body</actual>
                    <expected><![CDATA[<?xml version="1.0" encoding="UTF-8" ?>
<SOAP-ENV:Envelope xmlns:SOAP-ENV='http://schemas.xmlsoap.org/soap/envelope/' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xmlns:s='http://www.w3.org/2001/XMLSchema'>
    <SOAP-ENV:Body>
        <AddIntegerResponse xmlns="http://tempuri.org">
            <AddIntegerResult>35</AddIntegerResult>
        </AddIntegerResponse>
    </SOAP-ENV:Body>
</SOAP-ENV:Envelope>]]></expected>
                    <message>Actual payload is not equals with expected value 35</message>
                </assertEquals>
            </assertions>
        </test-case>
        <test-case name="test_divide">
            <input>
                <request-path>/</request-path>
                <request-method>POST</request-method>
                <payload><![CDATA[<ArithmaticOperation>   
<Arg1>10</Arg1>   
<Arg2>25</Arg2>   
</ArithmaticOperation>]]></payload>
                <properties>
                    <property name="Content-Type" scope="transport" value="text/xml"/>
                    <property name="Operation" scope="transport" value="Divide"/>
                </properties>
            </input>
            <assertions>
                <assertEquals>
                    <actual>$body</actual>
                    <expected><![CDATA[<?xml version="1.0" encoding="UTF-8" ?>
<SOAP-ENV:Envelope xmlns:SOAP-ENV='http://schemas.xmlsoap.org/soap/envelope/' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xmlns:s='http://www.w3.org/2001/XMLSchema'>
    <SOAP-ENV:Body>
        <DivideIntegerResponse xmlns="http://tempuri.org">
            <DivideIntegerResult>.4</DivideIntegerResult>
        </DivideIntegerResponse>
    </SOAP-ENV:Body>
</SOAP-ENV:Envelope>]]></expected>
                    <message>Actual payload is not equals with expected value 0.4</message>
                </assertEquals>
            </assertions>
        </test-case>
    </test-cases>
    <mock-services/>
</unit-test>
