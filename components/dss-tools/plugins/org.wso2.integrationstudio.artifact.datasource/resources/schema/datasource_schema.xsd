<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	elementFormDefault="qualified">
	
	

    <xs:element name="datasource" type="datasourceType"></xs:element>

    

    <xs:complexType name="datasourceType">
    	<xs:sequence>
    		<xs:element name="name" type="xs:string" maxOccurs="1"
    			minOccurs="1">
    		</xs:element>
    		<xs:element name="description" type="xs:string"
    			maxOccurs="1" minOccurs="0">
    		</xs:element>
    		<xs:element name="jndiConfig" type="jndiConfigType"
    			maxOccurs="1" minOccurs="0">
    		</xs:element>
    		<xs:choice>
    			<xs:element name="definition" type="definitionType"
    				maxOccurs="1" minOccurs="1">
    			</xs:element>
    		</xs:choice>
    	</xs:sequence>
    </xs:complexType>

    <xs:complexType name="definitionType" mixed="true">
    	<xs:sequence>
    		<xs:choice>
    			<xs:any processContents="skip" maxOccurs="unbounded"
    			minOccurs="0" />
    		</xs:choice>
    	</xs:sequence>
    	<xs:attribute name="type" type="xs:string"></xs:attribute>
    </xs:complexType>

    <xs:complexType name="jndiConfigType">
    	<xs:sequence>
    		<xs:element name="name" type="xs:string" maxOccurs="1"
    			minOccurs="0">
    		</xs:element>
    		<xs:element name="environment" type="jndiEnvType"
    			maxOccurs="1" minOccurs="0">
    		</xs:element>
    	</xs:sequence>
    	<xs:attribute name="useDataSourceFactory" type="xs:boolean"></xs:attribute>
    </xs:complexType>

    <xs:complexType name="jndiEnvType">
		<xs:sequence>
			<xs:element name="property" type="propertyType"
					maxOccurs="unbounded" minOccurs="0"></xs:element>
		</xs:sequence>
	</xs:complexType>
	
	<xs:complexType name="propertyType">
	    <xs:simpleContent>
	      <xs:extension base="xs:string">
	        <xs:attribute name="name" type="xs:string">
	        </xs:attribute>
	      </xs:extension>
	    </xs:simpleContent>
  	</xs:complexType>

</xs:schema>